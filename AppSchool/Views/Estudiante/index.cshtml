@model List<AppSchool.Models.ViewModels.ListEstudianteViewModel>

    <div class="container">
        @{
            ViewBag.Title = "Estudiante";
        }

        <div class="page-header">
            <div class="text-center"><h1>Estudiante</h1></div>
        </div>

        <div class="row" style="text-align:right;padding:10px">
            <a href="~/Estudiante/agregarEstudiante" class="btn btn-primary">Nuevo</a>
        </div>

                <table class="table table-striped table-bordered text-center">
                    <tr>
                        <th>ID</th>
                        <th>ID Curso</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Sexo</th>
                        <th>Edad</th>
                        <th>Codigo</th>
                        <th>Telefono</th>
                        <th>Direccion</th>
                    </tr>
                    @foreach (var oElemento in Model)
                    {
                        <tr>
                            <td>@oElemento.IdEstudiantes</td>
                            <td>@oElemento.IdCurso</td>
                            <td>@oElemento.Nombre</td>
                            <td>@oElemento.Apellido</td>
                            <td>@oElemento.Sexo</td>
                            <td>@oElemento.Edad</td>
                            <td>@oElemento.Codigo</td>
                            <td>@oElemento.Telefono</td>
                            <td>@oElemento.Direccion</td>
                            <td><a class="btn btn-default" href="~/Estudiante/EditarEstudiante/@oElemento.IdEstudiantes">Editar</a></td>
                            <td><a class="btn btn-danger" href="~/Estudiante/Eliminar/@oElemento.IdEstudiantes">Eliminar</a></td>
                        </tr>
                    }

                </table>
            </div>
    