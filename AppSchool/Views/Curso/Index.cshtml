@model List<AppSchool.Models.ViewModels.ListCursoViewModel>

    <div class="container">
        @{
            ViewBag.Title = "Curso";
        }

        <div class="page-header">
            <div class="text-center"><h1>Curso</h1></div>
        </div>
        <div class="row" style="text-align:right;padding:10px">
            <a href="~/Curso/Nuevo" class="btn btn-primary">Nuevo</a>
        </div>

                    <table class="table table-striped table-bordered text-center">
                        <tr>
                            <th>ID</th>
                            <th>Grado</th>
                            <th>Seccion</th>
                            <th>Cant. Estudiantes</th>
                            <th>Prof. Encargado</th>
                            <th>Acciones</th>
                        </tr>
                        @foreach (var oElemento in Model)
                        {
                            <tr>
                                <td>@oElemento.IdCurso</td>
                                <td>@oElemento.Grado</td>
                                <td>@oElemento.Seccion</td>
                                <td>@oElemento.CantDeEstudiantes</td>
                                <td>@oElemento.ProfesorEncargado</td>
                                <td><a class="btn btn-default" href="~/Curso/Editar/@oElemento.IdCurso">Editar</a></td>
                                <td><a class="btn btn-danger" href="~/Curso/Eliminar/@oElemento.IdCurso">Eliminar</a></td>
                            </tr>
                        }

                    </table>
             
          

    </div>