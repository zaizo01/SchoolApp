@model List<AppSchool.Models.ViewModels.ListMateriaViewModel>

    <div class="container">

        @{
            ViewBag.Title = "Materia";
        }

        <div class="page-header">
            <div class="text-center"><h1>Materia</h1></div>
        </div>

        <div class="row" style="text-align:right;padding:10px">
        <a href="~/Materia/agregarMateria" class="btn btn-primary">Nuevo</a>
        </div>

                <table class="table table-striped table-bordered text-center" >
                    <tr>
                        <th>ID</th>
                        <th>ID Curso</th>
                        <th>Profesor</th>
                        <th>Materia</th>
                        <th>Horario</th>
                        <th>Duracion</th>
                    </tr>

                    @foreach (var oElemento in Model)
                    {
                        <tr>
                            <td>@oElemento.IdMaterias</td>
                            <td>@oElemento.IdCurso</td>
                            <td>@oElemento.Profesor</td>
                            <td>@oElemento.Materia</td>
                            <td>@oElemento.Horario</td>
                            <td>@oElemento.Duracion</td>
                            <td><a class="btn btn-default" href="~/Materia/EditarMateria/@oElemento.IdMaterias">Editar</a></td>
                            <td><a class="btn btn-danger" href="~/Materia/Eliminar/@oElemento.IdMaterias">Eliminar</a></td>
                        </tr>
                    }

                </table>

    </div>
